@model PortariaInteligente.Models.Visitado

@{
    ViewData["Title"] = "Edit";
}

<h3>Editar Visitado</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VisitadoID" />
            <div class="form-group">
                <label asp-for="VisitadoNome" class="control-label"></label>
                <input asp-for="VisitadoNome" class="form-control" />
                <span asp-validation-for="VisitadoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitadoEmail" class="control-label"></label>
                <input asp-for="VisitadoEmail" class="form-control" />
                <span asp-validation-for="VisitadoEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitadoCel" class="control-label"></label>
                <input asp-for="VisitadoCel"
                       class="form-control"
                       id="celular" />
                <span asp-validation-for="VisitadoCel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

<script type="text/javascript">
    document.getElementById('celular').addEventListener('input', function (e) {
        var aux = e.target.value.replace(/\D/g, '').match(/(\d{0,2})(\d{0,5})(\d{0,4})/);
        e.target.value = !aux[2] ? aux[1] : '(' + aux[1] + ') ' + aux[2] + (aux[3] ? '-' + aux[3] : '');
    });
</script>