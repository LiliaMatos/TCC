@model PortariaInteligente.Models.Reuniao

@{
    ViewData["Title"] = "Edit";
}

<h3>Editar</h3>
<hr />
<form asp-action="Edit">
    <h4>Reunião</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <input type="hidden" asp-for="ReuniaoID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VisitadoID" class="control-label"></label>
                <select asp-for="VisitadoID" class="form-control" asp-items="ViewBag.VisitadoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="ReuniaoNome" class="control-label"></label>
                <input asp-for="ReuniaoNome" class="form-control" />
                <span asp-validation-for="ReuniaoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReuniaoData" class="control-label"></label>
                <input asp-for="ReuniaoData" class="form-control" />
                <span asp-validation-for="ReuniaoData" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <input type="hidden" asp-for="ReuniaoID">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReuniaoHora" class="control-label"></label>
                <input asp-for="ReuniaoHora" class="form-control" />
                <span asp-validation-for="ReuniaoHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaID" class="control-label"></label>
                <select asp-for="SalaID" class="form-control" asp-items="ViewBag.SalaID"></select>
            </div>
        </div>
        <div class=" col-md-12">
            <input type="submit" value="Salvar Alterações na Reunião" class="btn btn-primary" />
            <br />
            <br />
            <hr />
        </div>

        <div class=" col-md-12">
            <h4>Convites</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    <strong>Visitante</strong>
                </dt>
                <dt class="col-sm-4">
                    <strong>Empresa</strong>
                </dt>
                <dt class="col-sm-4">
                    <strong>Email</strong>
                </dt>
            </dl>
            <hr />
            @foreach (Convite p in Model.Convites)
            {
                <dl class="row">
                    <dd class="col-sm-4">
                        @Html.DisplayFor(modelItem => p.Visitantes.VisitanteNome)
                    </dd>
                    <dd class="col-sm-4">
                        @Html.DisplayFor(modelItem => p.Visitantes.Empresa)
                    </dd>
                    <dd class="col-sm-4">
                        @Html.DisplayFor(modelItem => p.Visitantes.VisitanteEmail)
                    </dd>
                </dl>
            }
        </div>
    </div>
    <div class=" col-md-12">
        <input type="submit" value="Editar Convites" class="btn btn-primary" formaction="/Convites/Index?ReuniaoID=@Model.ReuniaoID" />
         <hr />
    </div>
</form>


<div class="form-group">
    <br />
    <a asp-action="Index">Voltar para a Lista</a>
</div>