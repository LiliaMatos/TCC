@model IEnumerable<PortariaInteligente.Models.Reuniao>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h4>Filtros</h4>
        <hr />
        <form asp-controller="Reunioes" asp-action="Index">
            <div class="form-group">
                <label class="col-form-label"><strong>Data:</strong></label>
                <input type="date" name="data">
                <input type="submit" value="Filtrar" class="btn btn-primary btn-sm" />
            </div>
            <div class="form-group">
                <label class="col-form-label"><strong>Assunto:</strong></label>
                <input type="text" name="assunto">
                <input type="submit" value="Filtrar" class="btn btn-primary btn-sm" />
            </div>
            <div class="form-group">
                <label class="col-form-label"><strong>Visitado:</strong></label>
                <input type="text" name="visitado">
                <input type="submit" value="Filtrar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <form asp-controller="Reunioes" asp-action="Index">
            <h4>
                <a asp-action="Create">Cadastrar Reunião</a>
            </h4>
            <hr />
        </form>
        <br />
    </div>
</div>

<h4>Reuniões Cadastradas</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Visitados.VisitadoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReuniaoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReuniaoData)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReuniaoHora)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Visitados.VisitadoNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReuniaoNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReuniaoData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReuniaoHora)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReuniaoID">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ReuniaoID">Consultar</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReuniaoID">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="table-warning">@ViewBag.Mensagem</p>