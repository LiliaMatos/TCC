@model IEnumerable<PortariaInteligente.Models.Sala>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QtdLugares)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SalaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdLugares)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
